<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:orientation="vertical"
    tools:context=".main_package.activity.Activity_Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/iv_back"
            android:layout_marginStart="2dp"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"

            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:id="@+id/rl_change_pass"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_change_pass"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_change_password"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_change_pass"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:importantForAccessibility="no" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_notification"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notification"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_push_notifications"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_notification"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="RelativeOverlap" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/switchNotification"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    tools:ignore="TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml" />


            </RelativeLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




</LinearLayout>